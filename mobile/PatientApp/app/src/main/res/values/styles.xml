<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:dialogCornerRadius">30px</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyAlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyAlertDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyAlertDialogButton</item>
    </style>

    <style name="MyAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#0082FF</item>
    </style>

    <style name="heading_1_s">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_2_s">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_3_s">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="phone_display">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#0082FF</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="description">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#646978</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="placeholder" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="hintTextColor">#646978</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="blue_button_label">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="white_button_label">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="logout_button_label">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FF5151</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grey_click_TV">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#646978</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="searchViewText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#646978</item>
        <item name="android:textColor">#1D1D1D</item>
    </style>

    <style name="dateCuring">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#646978</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="small_grey_text">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#646978</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:gravity">top</item>
        <item name="android:translationY">-0.6sp</item>
    </style>

    <style name="small_blue_text">
        <item name="android:textColor">#0082FF</item>
        <item name="android:textColorHighlight">#0082FF</item>
        <item name="android:textColorLink">#0082FF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:gravity">top</item>
        <item name="android:translationY">-0.6sp</item>
    </style>


</resources>